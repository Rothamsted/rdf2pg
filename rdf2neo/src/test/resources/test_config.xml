<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package = "uk.ac.rothamsted.rdf.neo4j" />

		<!-- This is not typical of production-level config, used for tests only -->

		<bean id = "nodeIrisSparql" class = "uk.ac.ebi.utils.io.IOUtils" factory-method = "readResource">
			<constructor-arg value = "dbpedia_node_iris.sparql" />
		</bean>

		<bean id = "labelsSparql" class = "uk.ac.ebi.utils.io.IOUtils" factory-method = "readResource">
			<constructor-arg value = "dbpedia_node_labels.sparql" />
		</bean>
		
		<bean id = "nodePropsSparql" class = "uk.ac.ebi.utils.io.IOUtils" factory-method = "readResource">
			<constructor-arg value = "dbpedia_node_props.sparql" />
		</bean>

		<bean id = "relationTypesSparql" class = "uk.ac.ebi.utils.io.IOUtils" factory-method = "readResource">
			<constructor-arg value = "dbpedia_rel_types.sparql" />
		</bean>
		
		<bean id = "relationPropsSparql" class = "uk.ac.ebi.utils.io.IOUtils" factory-method = "readResource">
			<constructor-arg value = "dbpedia_rel_props.sparql" />
		</bean>


		<!-- This is needed whatever the config -->

		<bean id = "neoDriver" 
					class = "org.neo4j.driver.v1.GraphDatabase"
					factory-method ="driver">
			
			<constructor-arg value = "bolt://127.0.0.1:7687" />
					
			<constructor-arg>
				<bean class = "org.neo4j.driver.v1.AuthTokens" factory-method = "basic">
					<constructor-arg value = "neo4j" />
					<constructor-arg value = "test" />
				</bean>
			</constructor-arg>
		</bean>
		
</beans>